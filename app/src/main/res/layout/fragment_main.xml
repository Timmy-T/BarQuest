<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shop_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="attackontinytim.barquest.ShopActivity">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="Money: "
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/currMoney"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </TableRow>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="50dp">

        <!-- Header -->
        <TableRow
            android:layout_width="match_parent"
            android:weightSum="4">
            <TextView
                android:text="Item"
                android:textStyle="bold"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_weight="1"/>
            <TextView
                android:text="Cost"
                android:textStyle="bold"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_weight="1"/>
            <TextView
                android:text="Owned"
                android:textStyle="bold"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_weight="1"/>
            <TextView
                android:text=""
                android:layout_row="0"
                android:layout_column="3"
                android:layout_weight="1"/>
        </TableRow>

        <!-- HP Pot -->
        <TableRow
            android:layout_width="match_parent"
            android:weightSum="4">
            <TextView
                android:id="@+id/hp_pot_label"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/hp_pot_value"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/hp_pot_quantity"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/HP_Pot_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy x1"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_weight="1"/>
        </TableRow>

        <!-- Stat Pot 1 -->
        <TableRow
            android:layout_width="match_parent"
            android:weightSum="4">
            <TextView
                android:id="@+id/stat_pot_1_label"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/stat_pot_1_value"
                android:layout_weight="1"
                android:layout_row="2"
                android:layout_column="1"/>
            <TextView
                android:id="@+id/stat_pot_1_quantity"
                android:layout_weight="1"
                android:layout_row="2"
                android:layout_column="2"/>
            <Button
                android:id="@+id/stat_pot_1_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy x1"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_weight="1"/>
        </TableRow>

        <!-- Stat Pot 2 -->
        <TableRow
            android:layout_width="match_parent"
            android:weightSum="4">
            <TextView
                android:id="@+id/stat_pot_2_label"
                android:layout_weight="1"
                android:layout_row="3"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/stat_pot_2_value"
                android:layout_weight="1"
                android:layout_row="3"
                android:layout_column="1"/>
            <TextView
                android:id="@+id/stat_pot_2_quantity"
                android:layout_weight="1"
                android:layout_row="3"
                android:layout_column="2"/>
            <Button
                android:id="@+id/stat_pot_2_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy x1"
                android:layout_row="3"
                android:layout_column="3"
                android:layout_weight="1"/>
        </TableRow>

        <!-- Stat Pot 3 -->
        <TableRow
            android:layout_width="match_parent"
            android:weightSum="4">
            <TextView
                android:id="@+id/stat_pot_3_label"
                android:layout_weight="1"
                android:layout_row="2"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/stat_pot_3_value"
                android:layout_weight="1"
                android:layout_row="2"
                android:layout_column="1"/>
            <TextView
                android:id="@+id/stat_pot_3_quantity"
                android:layout_weight="1"
                android:layout_row="2"
                android:layout_column="2"/>
            <Button
                android:id="@+id/stat_pot_3_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy x1"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_weight="1"/>
        </TableRow>

        <!-- Weapon -->
        <TableRow
            android:layout_width="match_parent"
            android:weightSum="4">
            <TextView
                android:id="@+id/weapon_label"
                android:layout_weight="1"
                android:layout_row="2"
                android:layout_column="0"/>
            <TextView
                android:id="@+id/weapon_value"
                android:layout_weight="1"
                android:layout_row="2"
                android:layout_column="1"/>
            <TextView
                android:id="@+id/weapon_quantity"
                android:layout_weight="1"
                android:layout_row="2"
                android:layout_column="2"/>
            <Button
                android:id="@+id/weapon_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy x1"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_weight="1"/>
        </TableRow>

    </TableLayout>
</RelativeLayout>
