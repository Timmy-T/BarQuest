<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/level_up_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="attackontinytim.barquest.LevelUpActivity">

    <GridLayout
        android:id="@+id/levelUpGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="8"
        android:layout_alignParentTop="true">

        <!-- Level Up Banner -->
        <TextView
            android:text="LEVEL UP!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:textAlignment="center"
            android:textSize="40sp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowWeight="1"/>

        <!-- Level Stat -->
        <TextView
            android:text="Lvl. "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_rowWeight="1"/>
        <TextView
            android:text=" 10 "
            android:id="@+id/currLVLstat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_row="1"
            android:layout_column="1"/>
        <TextView
            android:text=" --> "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_row="1"
            android:layout_column="2"/>
        <TextView
            android:text=" 11 "
            android:id="@+id/newLVLstat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_row="1"
            android:layout_column="3"/>

        <!-- Ability Points Stat -->
        <TextView
            android:text="AP: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_rowWeight="1"/>
        <TextView
            android:text=" 10 "
            android:id="@+id/currAPstat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:textSize="20sp"
            android:layout_row="2"
            android:layout_column="1"/>

        <!-- Stats table -->
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:layout_gravity="top"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_rowWeight="4">
            <!-- HP stat -->
            <TableRow>
                <TextView
                    android:text="HP"
                    android:textSize="20sp"
                    android:padding="10dip" />
                <TextView
                    android:id="@+id/currHPstat"
                    android:textSize="20sp"
                    android:gravity="end"
                    android:padding="10dip" />
                <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addHP"/>
                <TextView
                    android:id="@+id/newHPstat"
                    android:textSize="20sp"
                    android:gravity="end"
                    android:padding="10dip" />
            </TableRow>
            <!-- Attack stat -->
            <TableRow>
                <TextView
                    android:text="Attack"
                    android:textSize="20sp"
                    android:padding="10dip" />
                <TextView
                    android:id="@+id/currATKstat"
                    android:textSize="20sp"
                    android:gravity="end"
                    android:padding="10dip" />
                <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addATK"/>
                <TextView
                    android:id="@+id/newATKstat"
                    android:textSize="20sp"
                    android:gravity="end"
                    android:padding="10dip" />
            </TableRow>
            <!-- Defense stat -->
            <TableRow>
                <TextView
                    android:text="Defense"
                    android:textSize="20sp"
                    android:padding="10dip" />
                <TextView
                    android:id="@+id/currDEFstat"
                    android:textSize="20sp"
                    android:gravity="end"
                    android:padding="10dip" />
                <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addDEF"/>
                <TextView
                    android:id="@+id/newDEFstat"
                    android:textSize="20sp"
                    android:gravity="end"
                    android:padding="10dip" />
            </TableRow>
            <!-- Speed stat -->
            <TableRow>
                <TextView
                    android:text="Speed"
                    android:textSize="20sp"
                    android:padding="10dip" />
                <TextView
                    android:id="@+id/currSPDstat"
                    android:textSize="20sp"
                    android:gravity="end"
                    android:padding="10dip" />
                <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addSPD"/>
                <TextView
                    android:id="@+id/newSPDstat"
                    android:textSize="20sp"
                    android:gravity="end"
                    android:padding="10dip" />
            </TableRow>
        </TableLayout>

        <Button
            android:text="Distribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/distStats"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_rowWeight="1"/>

    </GridLayout>
</RelativeLayout>
