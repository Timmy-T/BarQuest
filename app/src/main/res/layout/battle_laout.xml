<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/battle_laout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="attackontinytim.barquest.BattleActivity">

    <GridLayout
        android:id="@+id/BattleGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="4"
        android:layout_alignParentTop="true">

        <TableLayout
            android:id="@+id/battleDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:visibility="invisible"
            android:textAlignment="center"
            android:paddingBottom="20dp"
            android:paddingTop="10dp"
            android:layout_row="0"
            android:layout_column="0">
            <TableRow>
                <TextView
                    android:id="@+id/attackerText"
                    android:textSize="15dp"/>
                <TextView
                    android:text=" attacks "
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/defenderText"
                    android:textSize="15dp"/>
                <TextView
                    android:text=" for "
                    android:textSize="15dp"/>
                <TextView
                    android:id="@+id/damageText"
                    android:textSize="15dp"/>
                <TextView
                    android:text=" damage! "
                    android:textSize="15dp"/>
            </TableRow>

        </TableLayout>

        <ImageView
            android:id="@+id/heroPic"
            android:layout_width="100dp"
            android:layout_height="300dp"
            android:layout_column="0"
            android:layout_columnWeight="2"
            android:layout_gravity="center|bottom"
            android:layout_row="1"
            android:scaleType="fitEnd"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/attackPic"
            android:layout_width="100dp"
            android:layout_height="300dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:visibility="invisible"
            android:layout_gravity="center|bottom"
            android:layout_row="1"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/attack_slash" />

        <ImageView
            android:id="@+id/monsterPic"
            android:layout_width="100dp"
            android:layout_height="300dp"
            android:layout_column="2"
            android:layout_columnWeight="2"
            android:layout_row="1"
            android:scaleType="fitEnd"
            android:src="@drawable/temp_monster" />

        <GridLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center"
            android:columnCount="4"
            android:rowCount="4"
            android:layout_row="2"
            android:layout_column="0">
            <TextView
                android:id="@+id/CharName"
                android:text="HERO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="4"
                android:textAlignment="center"
                android:paddingBottom="5dp"
                android:layout_column="0"
                android:layout_row="0"/>
            <TextView
                android:text="Level "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight = "5dp"
                android:layout_column="0"
                android:layout_row="1"/>
            <TextView
                android:id="@+id/lvlstat"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"/>
            <TextView
                android:text="HP "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"/>
            <TextView
                android:id="@+id/currCharHP"
                android:text="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"/>
            <TextView
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="2"/>
            <TextView
                android:id="@+id/hpstat"
                android:text="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="2"/>
            <ProgressBar
                android:id="@+id/CharHPBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="4"
                android:layout_row="3"
                android:layout_column="0"/>
        </GridLayout>

        <GridLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center"
            android:columnCount="4"
            android:rowCount="4"
            android:layout_row="2"
            android:layout_column="2">
            <TextView
                android:id="@+id/MonName"
                android:text="MONSTER"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="4"
                android:textAlignment="center"
                android:paddingBottom="5dp"
                android:layout_column="0"
                android:layout_row="0"/>
            <TextView
                android:text="Level "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight = "5dp"
                android:layout_column="0"
                android:layout_row="1"/>
            <TextView
                android:id="@+id/monlvl"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"/>
            <TextView
                android:text="HP "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"/>
            <TextView
                android:id="@+id/currMonHP"
                android:text="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"/>
            <TextView
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_row="2"/>
            <TextView
                android:id="@+id/monhp"
                android:text="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_row="2"/>
            <ProgressBar
                android:id="@+id/MonHPBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="4"
                android:layout_row="3"
                android:layout_column="0"/>
        </GridLayout>

        <Button
            android:id="@+id/attackButton"
            android:text="Attack!"
            android:layout_width="100dp"
            android:layout_height="75dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="3"/>

        <Button
            android:id="@+id/itemButton"
            android:text="Item!"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_columnWeight="2"
            android:layout_column="1"
            android:layout_row="3"/>

        <Button
            android:id="@+id/fleeButton"
            android:text="Flee!"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_columnWeight="1"
            android:layout_column="2"
            android:layout_row="3"/>




    </GridLayout>
</RelativeLayout>
