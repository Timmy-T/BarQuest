<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/character_screen_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="attackontinytim.barquest.CharacterScreenActivity">

    <GridLayout
        android:id="@+id/CharacterGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="3"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:paddingBottom="20dp"
            android:background="?attr/colorAccent"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:layout_row="0"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/CharName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:paddingBottom="20dp"
            android:paddingTop="10dp"
            android:layout_row="0"
            android:layout_column="0"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2">

            <TableRow>

                <TextView
                    android:text="EXP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:paddingBottom="30dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:layout_row="0"
                    android:layout_column="0"/>

                <ProgressBar
                    android:id="@+id/ExpBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="30dp"
                    android:paddingTop="15dp"
                    android:paddingLeft="10dp"
                    android:layout_row="0"
                    android:layout_column="1"/>

                <TextView
                    android:id="@+id/expstat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:paddingBottom="30dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:layout_row="0"
                    android:layout_column="2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:paddingBottom="30dp"
                    android:paddingTop="10dp"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:text="/100"
                    />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="150dp"
            android:layout_height="300dp"
            android:layout_gravity="center|top"
            android:layout_row="2"
            android:layout_column="0">
            <TableRow>
                <TextView
                    android:text="Money"
                    android:textSize="20sp"
                    android:padding="10dip" />
                <TextView
                    android:id="@+id/moneystat"
                    android:textSize="20sp"
                    android:gravity="end"
                    android:padding="10dip" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Level"
                    android:textSize="20sp"
                    android:padding="10dip" />
                <TextView
                    android:id="@+id/lvlstat"
                    android:textSize="20sp"
                    android:gravity="end"
                    android:padding="10dip" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="HP"
                    android:textSize="20sp"
                    android:padding="10dip" />
                <TextView
                    android:id="@+id/hpstat"
                    android:textSize="20sp"
                    android:gravity="end"
                    android:padding="10dip" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Attack"
                    android:textSize="20sp"
                    android:padding="10dip" />
                <TextView
                    android:id="@+id/atkstat"
                    android:textSize="20sp"
                    android:gravity="end"
                    android:padding="10dip" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Defense"
                    android:textSize="20sp"
                    android:padding="10dip" />
                <TextView
                    android:id="@+id/defstat"
                    android:textSize="20sp"
                    android:gravity="end"
                    android:padding="10dip" />
            </TableRow>
            <TableRow>
                <TextView
                    android:text="Speed"
                    android:textSize="20sp"
                    android:padding="10dip" />
                <TextView
                    android:id="@+id/spdstat"
                    android:textSize="20sp"
                    android:gravity="end"
                    android:padding="10dip" />
            </TableRow>
        </TableLayout>

        <ImageView
            android:id="@+id/AndroidImage"
            android:layout_width="150dp"
            android:layout_height="300dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_gravity="center|top"
            android:layout_row="2"
            android:layout_column="1" />

    </GridLayout>
</RelativeLayout>
