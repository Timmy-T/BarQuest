<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="attackontinytim.barquest.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView4" />

    <Button
        android:text="Battle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="57dp"
        android:id="@+id/battleButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/scannerButton" />

    <Button
        android:text="Character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/battleButton"
        android:layout_toEndOf="@+id/scannerButton"
        android:id="@+id/characterButton" />

    <Button
        android:text="Inventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="67dp"
        android:id="@+id/inventoryButton" />

    <Button
        android:text="Shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shopButton"
        android:layout_alignBaseline="@+id/inventoryButton"
        android:layout_alignBottom="@+id/inventoryButton"
        android:layout_alignStart="@+id/battleButton" />
</RelativeLayout>
